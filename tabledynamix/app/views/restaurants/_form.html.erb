<%= form_for @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :capacity %>
  <%= f.number_field :capacity %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :phone %>
  <%= f.telephone_field :phone %>

  <%= f.label :open_time %>
  <%= f.time_select :open_time, ampm: true, minute_step: 60 %>

  <%= f.label :close_time %>
  <%= f.time_select :close_time, ampm: true, minute_step: 60 %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :menu %>
  <%= f.text_area :menu %>

  <%= f.label :picture %>
  <%= f.text_field :picture %>
  <%= f.label :category_ids, 'Category' %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  <%= f.submit %>
<% end %>
