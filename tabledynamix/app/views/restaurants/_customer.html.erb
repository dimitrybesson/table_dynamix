<p> <%= link_to "Reserve Now", new_restaurant_reservation_path(@restaurant) %></p>

<h2>Add a review</h2>
<%= form_for [@restaurant, @review] do |f| %>

  <div class="field">
    <%= f.label :rating %>
    <%= f.number_field :rating %>
  </div>

  <div class="field">
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
