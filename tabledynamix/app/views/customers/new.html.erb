<h1>Add a new customer</h1>
 <%= form_for @customer do |f|  %>

   <%= f.label :email  %>
   <%= f.email_field :email %>

   <%= f.label :password  %>
   <%= f.password_field :password %>

   <%= f.label :password_confirmation  %>
   <%= f.password_field :password_confirmation %>

   <%= f.submit %>

 <% end %>
