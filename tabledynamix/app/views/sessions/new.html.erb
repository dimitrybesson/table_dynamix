<h1>Sign in</h1>

<%= form_tag sessions_path do %>



  <%= label_tag :email %>
  <%= email_field_tag :email  %>

  <%= label_tag :password %>
  <%= password_field_tag :password  %>
  <br>
  <%= radio_button_tag(:user_type, "owner") %>
  <%= label_tag(:user_type_owner, "Log in as Owner") %>

  <%= radio_button_tag(:user_type, "customer") %>
  <%= label_tag(:user_type_customer, "Log in as Customer") %>

  <%= submit_tag "Log in" %>

<% end %>
